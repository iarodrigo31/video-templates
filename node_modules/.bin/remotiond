#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -x "$basedir/deno" ]; then
  exec "$basedir/deno" --allow-env --allow-read --allow-write --allow-net --allow-run --allow-sys "$basedir/../@remotion/cli/remotiond-cli.js" "$@"
else 
  exec deno --allow-env --allow-read --allow-write --allow-net --allow-run --allow-sys "$basedir/../@remotion/cli/remotiond-cli.js" "$@"
fi
